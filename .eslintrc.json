{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["**/dist/*", "**/node_modules/*", "**/public/*"],
  "rules": {
    "@typescript-eslint/semi": ["error", "always"]
  }
}
